
{
  "clearMocks": true,
  "collectCoverage": true,
  "coverageDirectory": "coverage",
  "coverageProvider": "v8",
  "globals": {
    "ts-jest": {
      "tsconfig": "tsconfig.json"
    }
  },
  "moduleFileExtensions": [
    "js",
    "ts",
    "json"
  ],
  "preset": "ts-jest",
  "testEnvironment": "node",
  "testMatch": [
    "**/__tests__/*.test.ts"
  ],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  }

}

